@model IEnumerable<SaitZaObuvkiComfort.Data.Order>

@{
    ViewData["Title"] = "Index";
}
<style>
    thead {
        background-color: #BBA2D6
    }
</style>
<center><h1>Поръчки</h1></center>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Поръчано от
            </th>
            <th>
                Поръчани обувки
            </th>
            <th>
                Количество
            </th>
            <th>
                Обща стойност:
            </th>
            <th>
               Дата на поръчка
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @item.Clients.Name  @item.Clients.LastName
            </td>
            <td>
                    <img src="@Html.DisplayFor(modelItem => item.Products.PhotoURL)" width="120" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity) броя
            </td>
            <td>
                    @(item.Products.Price * item.Quantity) лв.
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
